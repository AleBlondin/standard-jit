{
  "name": "standard-jit",
  "displayName": "standard-jit",
  "description": "Show standards associated with written code",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/theodo/standard-jit"
  },
  "publisher": "AleBlondin",
  "license": "MIT",
  "version": "0.5.2",
  "engines": {
    "vscode": "^1.62.0"
  },
  "activationEvents": [
    "onStartupFinished",
    "onCommand:standard-jit.enableCodeLens"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "title": "Enable",
        "command": "standard-jit.enableCodeLens",
        "category": "Standard JIT"
      },
      {
        "title": "Disable",
        "command": "standard-jit.disableCodeLens",
        "category": "Standard JIT"
      },
      {
        "title": "Unhide standards",
        "command": "standard-jit.unhideStandards",
        "category": "Standard JIT"
      }
    ],
    "configuration": {
      "properties": {
        "standard-jit.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Activate extension"
        },
        "standard-jit.standardsToInclude": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "theodo",
              "bpi"
            ]
          },
          "default": [
            "theodo"
          ],
          "uniqueItems": true,
          "description": "Select which standards to show. Please note that you will need the appropriate Notion accesses."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "download-notion-standards": "ts-node ./scripts/downloadNotionStandards.ts",
    "dsn": "yarn download-notion-standards"
  },
  "devDependencies": {
    "@notionhq/client": "^0.4.9",
    "@types/glob": "^7.1.4",
    "@types/lodash": "^4.14.177",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "dotenv": "^10.0.0",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "lodash": "^4.17.21",
    "mocha": "^9.1.3",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  }
}
